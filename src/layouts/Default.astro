---
import Base from "./Base.astro"
import Menu from "../components/Menu.astro"
import { getSession } from "auth-astro/server"

const session = JSON.stringify(await getSession(Astro.request))
---

<Base>
  <data data-session={session} id="session" />
  <div class="flex bg-base-200 h-screen">
    <Menu />
    <div class="p-4 pt-16 lg:p-4 place-content-center w-full">
      <slot />
    </div>
  </div>
</Base>