---
const {deck_id} = Astro.props
import {db, eq, Deck, Card, Studies} from "astro:db"
import { getSession } from "auth-astro/server"
import Heatmap from "./Heatmap.astro"
import Settings from "./Settings.astro"

const session = await getSession(Astro.request)
let cards
let studies
const deck = (await db.select().from(Deck).where(eq(Deck.id, deck_id)))[0]

const today = new Date();
today.setUTCHours(0, 0, 0, 0);
const tomorrow = new Date(today);
tomorrow.setUTCDate(today.getUTCDate() + 1);
studies = (await db.select().from(Studies).where(eq(Studies.date, today))).find(s => s.deck === deck_id) || { new: 0 }
cards = await db.select().from(Card).where(eq(Card.deck, deck.id))
deck.new = Math.max(0, Math.min(deck.max_new_cards - studies.new, cards.filter(card => card.state === 0).length))
deck.learn = cards.filter(card => card.state === (1 || 3)).length
deck.review = cards.filter(card => card.state === 2 && card.due && new Date(card.due) < tomorrow).length
---

