---
const { deck_id, card_id } = Astro.props;
import { db, eq, Deck, Card as CardDB } from "astro:db";
import { getSession } from "auth-astro/server";
import Edit from "../card/Edit.astro";
import Delete from "../card/Delete.astro";

const session = await getSession(Astro.request);

const card = (await db.select().from(CardDB).where(eq(CardDB.id, card_id)))[0];
---

<tr>
  <td>
    {card.front}
  </td>
  <td>
    {card.back}
  </td>
  <td class="justify-end flex gap-2">
    <button class="btn btn-square btn-sm sm:btn-md" onclick={`modal_card_edit_${card_id}.showModal()`}>
